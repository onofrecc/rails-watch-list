<h1><%= @list.name %></h1>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li><%= bookmark.comment  %> <%= link_to "Delete",
                                    bookmark_path(bookmark),
                                    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
  <% end %>
</ul>

<p><%= link_to 'Create a bookmark for this list',  new_list_bookmark_path(@list) %></p>
